<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ruleta.Ruleta_Activity"><ImageView
    android:id="@+id/imageViewBackground"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:contentDescription="Roulette Background"
    android:scaleType="centerCrop"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/ruleta_background" />

    <!-- Botón para Volver al Catálogo -->
    <ImageButton
        android:id="@+id/buttonBackToCatalog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Volver al Catálogo"
        android:padding="8dp"
        android:src="@drawable/ic_close_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/linearLayoutInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:background="#80000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textViewBank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Banco: $1000"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textAlignment="center"/>
    </LinearLayout>

    <Button
        android:id="@+id/buttonSpin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Girar Ruleta"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:id="@+id/scrollViewBettingArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutInfo"
        app:layout_constraintBottom_toTopOf="@+id/buttonSpin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <!-- Tablero de números (0-36) se añadirá aquí dinámicamente -->
            <LinearLayout
                android:id="@+id/linearLayoutNumberBoard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:paddingBottom="16dp">
                <!-- El número 0 irá a la izquierda, luego las 3 filas de 12 números -->
            </LinearLayout>

            <!-- Apuestas Especiales (Rojo/Negro, Par/Impar) -->
            <GridLayout
                android:id="@+id/gridLayoutSpecialBets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:columnCount="2"
                android:rowCount="2"
                android:useDefaultMargins="true">

                <Button
                    android:id="@+id/buttonBetRed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rojo ($0)" />

                <Button
                    android:id="@+id/buttonBetBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Negro ($0)" />

                <Button
                    android:id="@+id/buttonBetOdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Impar ($0)" />

                <Button
                    android:id="@+id/buttonBetEven"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Par ($0)" />
            </GridLayout>

            <!-- Apuestas por Docenas -->
            <LinearLayout
                android:id="@+id/linearLayoutDozenBets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center">

                <Button
                    android:id="@+id/buttonBet1st12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="1ra Docena ($0)" />

                <Button
                    android:id="@+id/buttonBet2nd12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="2da Docena ($0)" />

                <Button
                    android:id="@+id/buttonBet3rd12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3ra Docena ($0)" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

