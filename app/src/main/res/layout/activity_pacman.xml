<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pacman.Pacman_Activity"
    android:background="#0B0F1A">

    <!-- ===== HUD / TOP BAR ===== -->
    <androidx.cardview.widget.CardView
        android:id="@+id/hudCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="12dp"
        app:cardBackgroundColor="#101726"
        app:cardCornerRadius="14dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PAC-MAN"
                    android:textColor="#FFE94D"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:letterSpacing="0.08" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp">

                    <TextView
                        android:id="@+id/tvScoreLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SCORE "
                        android:textColor="#9FB3FF"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="000000"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="12dp"
                        android:layout_height="0dp" />

                    <TextView
                        android:id="@+id/tvHighLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HIGH "
                        android:textColor="#9FB3FF"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvHighScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="000000"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Lives -->
            <LinearLayout
                android:id="@+id/livesRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/life1"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:text="●"
                    android:textColor="#FFE94D"
                    android:gravity="center"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/life2"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="6dp"
                    android:text="●"
                    android:textColor="#FFE94D"
                    android:gravity="center"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/life3"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="6dp"
                    android:text="●"
                    android:textColor="#FFE94D"
                    android:gravity="center"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/btnPause"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#23304D"
                android:gravity="center"
                android:text="Ⅱ"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- ===== GAME AREA (Square, layered) ===== -->
    <androidx.cardview.widget.CardView
        android:id="@+id/gameCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="#061127"
        app:cardCornerRadius="18dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toBottomOf="@id/hudCard"
        app:layout_constraintBottom_toTopOf="@+id/controlsCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Square ratio container -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/gameSquare"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="1:1">

                <!-- Layers: we draw from Kotlin on these -->
                <FrameLayout
                    android:id="@+id/layer_maze"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#0B1E3A" />

                <FrameLayout
                    android:id="@+id/layer_pellets"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent" />

                <FrameLayout
                    android:id="@+id/layer_actors"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent" />

                <FrameLayout
                    android:id="@+id/layer_fx"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent" />

                <!-- Level banner / messages -->
                <TextView
                    android:id="@+id/tvCenterMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="READY!"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="#FFE94D"
                    android:background="@android:color/transparent"
                    android:padding="6dp"
                    android:layout_gravity="center"/>
            </FrameLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- ===== CONTROLS ===== -->
    <androidx.cardview.widget.CardView
        android:id="@+id/controlsCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        app:cardBackgroundColor="#101726"
        app:cardCornerRadius="14dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- D-PAD -->
            <FrameLayout
                android:id="@+id/dpad"
                android:layout_width="132dp"
                android:layout_height="132dp"
                android:background="#23304D">

                <TextView
                    android:id="@+id/btnUp"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_gravity="top|center_horizontal"
                    android:layout_marginTop="6dp"
                    android:background="#2F3E63"
                    android:gravity="center"
                    android:text="▲"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/btnLeft"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginStart="6dp"
                    android:background="#2F3E63"
                    android:gravity="center"
                    android:text="◀"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/btnRight"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="6dp"
                    android:background="#2F3E63"
                    android:gravity="center"
                    android:text="▶"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/btnDown"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="6dp"
                    android:background="#2F3E63"
                    android:gravity="center"
                    android:text="▼"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <TextView
                    android:id="@+id/btnStart"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_margin="6dp"
                    android:background="#2B8A3E"
                    android:gravity="center"
                    android:text="START"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/btnReset"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_margin="6dp"
                    android:background="#C23B3B"
                    android:gravity="center"
                    android:text="RESET"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
