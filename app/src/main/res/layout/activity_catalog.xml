<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".CatalogActivity">

    <TextView
        android:id="@+id/tvCatalogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Mis Juegos"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSignOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:text="Cerrar Sesión"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:id="@+id/scrollViewGames"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvCatalogTitle"
        app:layout_constraintBottom_toTopOf="@id/btnSignOut"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/linearLayoutGamesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp">

            <!-- Contenedor para el Juego de Blackjack -->
            <LinearLayout
                android:id="@+id/layoutBlackjackGame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:layout_marginTop="16dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/ivBlackjackIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/blackjack_ic"
                    android:contentDescription="Icono Blackjack" />

                <TextView
                    android:id="@+id/tvBlackjackName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Blackjack"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

            <!-- Contenedor para el Juego de Brick Breaker -->
            <LinearLayout
                android:id="@+id/layoutBrickBreakerGame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:layout_marginTop="24dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/ivBrickBreakerIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/brick_breaker_ic"
                    android:contentDescription="Icono BrickBreaker" />

                <TextView
                    android:id="@+id/tvBrickBreakerName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Brick Breaker"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

            <!-- Contenedor para el Juego de Snake -->
            <LinearLayout
                android:id="@+id/layoutSnakeGame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:layout_marginTop="24dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/ivSnakeIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/snake_ic"
                    android:contentDescription="Icono Snake" />

                <TextView
                    android:id="@+id/tvSnakeName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Snake"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

            <!-- Contenedor para el Juego de Click123 -->
            <LinearLayout
                android:id="@+id/layoutClick123Game"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:layout_marginTop="24dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/ivClick123Icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/click_ic"
                    android:contentDescription="Icono Click123" />

                <TextView
                    android:id="@+id/tvClick123Name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Click123"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

            <!-- Contenedor para el Juego de Pacman -->
            <LinearLayout
                android:id="@+id/layoutPacmanGame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:layout_marginTop="24dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/ivPacmanIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/pacman_ic"
                    android:contentDescription="Icono Pacman" />

                <TextView
                    android:id="@+id/tvPacmanName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pacman"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

            <!-- Contenedor para el Juego de Ruleta -->
            <LinearLayout
                android:id="@+id/layoutRuletaGame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:layout_marginTop="24dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/ivRuletaIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ruleta_icjpg"
                    android:contentDescription="Icono Ruleta" />

                <TextView
                    android:id="@+id/tvRuletaName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ruleta"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

            <!-- Contenedor para el Juego de Solitario -->
            <LinearLayout
                android:id="@+id/layoutSolitarioGame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

            <ImageView
                android:id="@+id/ivSolitarioIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/solitario_ic"
                android:contentDescription="Icono Solitario" />

            <TextView
                android:id="@+id/tvSolitarioName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Solitario"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_marginStart="16dp" />
        </LinearLayout>

            <!-- Contenedor para el Juego de Sudoku -->
            <LinearLayout
                android:id="@+id/layoutSudokuGame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/ivSudokuIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@mipmap/ic_launcher_round"
                    android:contentDescription="Icono Sudoku" />

                <TextView
                    android:id="@+id/tvSudokuName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sudoku"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

        <!-- Añade más juegos aquí si es necesario -->

    </LinearLayout>
</ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
